<p style="color: green"><%= notice %></p>

<h1><%= t('.header') %></h1>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to t('models.book.link.show_this_book'), book %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @books %>

<nav class="page-nav">
  <%= link_to t('.link'), new_book_path %>
</nav>
