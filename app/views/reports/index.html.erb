<h1><%= t('views.common.title_index', name: Report.model_name.human) %></h1>

<div class="index-item">
  <% @reports.each do |report| %>
    <div class="index-item">
      <%= render report %>
      <p>
        <%= link_to t('views.common.show', name: Report.model_name.human.downcase), report_path(report) %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @reports %>

<%= link_to t('views.common.new', name: Report.model_name.human.downcase), new_report_path %>
