<h2><%= t('models.user.header.new_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t('models.user.label.new_password') %><br />
    <% if @minimum_password_length %>
      <em>(<%= t('models.user.note.characters_minimum', count: @minimum_password_length) %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('models.user.label.confirm_password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('models.user.button.change') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
