<DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <% if params[:controller] == 'books' %>
      <%= link_to t('.my_profile'), user_path(current_user) %>
      <%= link_to t('.users'), users_path %>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to t('.logout'), destroy_user_session_path, data: { turbo_method: :delete } %>
    <% end %>
    <%# <p class="notice"><%= notice %1></p> %>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
