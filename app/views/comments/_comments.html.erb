<div class="index-item">
  <h2><%= t('views.common.title_index', name: Comment.model_name.human) %></h2>
  <% if comments.present? %>
    <% comments.each do |comment| %>
      <div class="index-item">
        <strong><%= Comment.human_attribute_name(:title) %>:</strong>
        <p><%= comment.title %></p>
        <strong><%= Comment.human_attribute_name(:body) %>:</strong>
        <p><%= comment.body %></p>
        <p>Posted by <%= comment.user.name || comment.user.email %></p>
        <% if comment.user == current_user %>
          <nav class="page-nav">
            <%= link_to t('views.common.edit', name: Comment.model_name.human.downcase), edit_polymorphic_path([commentable, comment]) %>
            <%= button_to t('views.common.destroy', name: Comment.model_name.human.downcase), [commentable, comment], method: :delete %>
          </nav>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>コメントはまだありません。</p>
  <% end %>
</div>
